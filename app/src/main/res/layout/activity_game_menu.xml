<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Struct1.GameMenu">

    <Button
        android:id="@+id/switchCarLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="160dp"

        android:background="@drawable/border2"
        android:backgroundTint="#B5D9DC"
        android:backgroundTintMode="add"

        android:onClick="onBtn_SwitchCarLeft"
        android:text="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectedCar"
        android:layout_width="112dp"
        android:layout_height="108dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toEndOf="@+id/switchCarLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gyrocar2" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="152dp"
        android:onClick="onBtn_PlayClicked"
        app:layout_constraintStart_toEndOf="@+id/switchCarRight"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play" />

    <Button
        android:id="@+id/switchCarRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="160dp"

        android:background="@drawable/border2"
        android:backgroundTint="#B5D9DC"
        android:backgroundTintMode="add"

        android:onClick="onBtn_SwitchCarRight"
        android:text="right"
        app:layout_constraintStart_toEndOf="@+id/selectedCar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>